<Window x:Class="TheCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:str="clr-namespace:TheCalculator.Localization"
        
        Title="{x:Static str:Strings.TheCalculator}"
        SizeToContent="Height"
        Width="525">
    <Grid FocusManager.FocusedElement="{Binding ElementName=TxtInput}">
        <TextBox x:Name="TxtInput"
                 TextChanged="InputTextChanged"
                 Height="30"
                 VerticalContentAlignment="Center"
                 FontFamily="Consolas"
                 >
        </TextBox>
    </Grid>
</Window>
